{
  "name": "nest-and-next",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/backend/main.ts",
    "build:clean": "rimraf dist",
    "build:frontend": "npx next build",
    "build:backend": "npx tsc --project tsconfig.backend.json && npx babel dist/backend -d dist/backend --extensions \".js\"",
    "build": "yarn build:clean && yarn build:frontend && yarn build:backend",
    "start": "cross-env NODE_ENV=production node dist/backend/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/platform-express": "^6.5.3",
    "cross-env": "^6.0.3",
    "nest-next": "^9.2.0",
    "next": "9.4.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
