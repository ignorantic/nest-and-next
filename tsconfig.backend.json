{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/backend",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false
  },
  "include": [
    "./src/backend/**/*"
  ],
  "exclude": ["node_modules"]
}
